<MudList Clickable="false">
    @foreach (var supportingContent in DataPoints)
    {
        var content = Markdown.ToHtml(supportingContent.Content);

        <MudDivider />

        <MudListItem>
            <MudText Typo="Typo.subtitle1" Class="pb-2" Style="font-weight: bold;" Color="Color.Primary">@supportingContent.Title</MudText>
            <MudText Typo="Typo.subtitle2">@supportingContent.OriginUri</MudText>
            <MudText Typo="Typo.body1">
                @((MarkupString)content)
            </MudText>
        </MudListItem>
    }
